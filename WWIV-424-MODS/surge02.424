   helpl=4;
   write_inst(INST_LOC_DEFAULTS,0,INST_FLAGS_NONE);
   if (existprint(get_string(1031)))
   pausescr();
   defaults();
   break;
  case 'F':
   write_inst(INST_LOC_FEEDBACK,0,INST_FLAGS_ONLINE);
   feedback(0);
   topscreen();
   break;
  case 'G':
   helpl=28;
   write_inst(INST_LOC_GFILES,0,INST_FLAGS_NONE);
   existprint(get_string(1032));
