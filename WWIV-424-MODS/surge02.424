 strcpy(temp, "7[3O1ABCDFGIYU");
 strcat(temp, "7] ");
 outstr(temp);
 mpl(1);
 strcpy(temp, "O\r?ABCDFGUIYU");
 key=onek(temp);
 switch(key)
  {
  case 'A':
   dialback();                          /* Comment #1 */
   break;
  case 'B':
   bbslist();
   break;
  case 'C':
   if (exist("SYSAVAIL.BAT")) {   /*Comment #2*/
   extern_prog("SYSAVAIL.BAT", EFLAG_NOPAUSE | EFLAG_SHRINK);  /*Comment #2*/
   } else                         /*Comment #2*/
   helpl=3;
   reqchat();
